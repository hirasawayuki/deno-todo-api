{
  "allow": {"env": true, "read": "./db", "write": "./db", "net": true},
  "$schema": "https://deno.land/x/denon/schema.json",
  "scripts": {
    "start": {
      "cmd": "server.ts",
      "desc": "Run the main server",
      "unstable": true,
      "env": {
        "SECRET_KEY": "YourSecretKey"
      }
    }
  },
  "watcher": {
    "interval": 350,
    "exts": ["ts", "json"],
    "match": ["**/*.*"],
    "skip": ["*/.git/*", "./db/*"]
  }
}
